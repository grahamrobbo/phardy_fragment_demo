<mvc:View height="100%"
  controllerName="yelcho.demo.controller.View"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <Page title="{i18n>demoTitle}"
    enableScrolling="true"
    showHeader="true">
    <SelectList items="{/monsters}"
      itemPress="onMonsterPressed">
      <items>
        <core:Item text="{name}" />
      </items>
    </SelectList>
    <footer>
      <Toolbar>
        <ToolbarSpacer />
        <Text text="{i18n>yelcho-systems-consulting}" />
        <ToolbarSpacer />
      </Toolbar>
    </footer>
  </Page>
</mvc:View>